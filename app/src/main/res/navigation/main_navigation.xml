<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_navigation"
    app:startDestination="@id/listaFragment">

    <fragment
        android:id="@+id/listaFragment"
        android:name="com.iessaladillo.alejandro.adm_librosfavoritos.ui.list.ListaFragment"
        android:label="@string/ListaFragment_title" >
        <action
            android:id="@+id/actionListaToAgregar"
            app:destination="@id/agregarFragment" />
        <action
            android:id="@+id/actionListaToSettings"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/agregarFragment"
        android:name="com.iessaladillo.alejandro.adm_librosfavoritos.ui.add.AgregarFragment"
        android:label="@string/AgregarFragment_title" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.iessaladillo.alejandro.adm_librosfavoritos.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>